---
interface Props {
  htmlTitle?: string;
  title?: string;
}

const { title, htmlTitle } = Astro.props;
---

<header class="page-header">
  {title && <h1 class="title">{title}</h1>}
  {
    htmlTitle && (
      <h1 class="title">
        <Fragment set:html={htmlTitle} />
      </h1>
    )
  }
  <div class="arrow">
    <svg
      width="50px"
      height="25px"
      xmlns="http://www.w3.org/2000/svg"
      version="1.1"
    >
      <polyline points="0,0 50,0 25,25" fill="#333333"></polyline>
    </svg>
  </div>
</header>
